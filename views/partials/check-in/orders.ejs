<div class="table-responsive">
	<table class="table table-striped">
		<% if(!orders?.length) { %>
			<tr>
				<td class="p-3 align-middle">
					No order records found
				</td>
			</tr>
		<% } else { %>
		<% orders.forEach(function(order) { %>
			<tr>
				<td class="px-3 align-middle">
					<span class="fw-bold d-block"><%= order[0] %></span>
					<small class="text-muted"><%= order[2] %></span>
				</td>
				<td class="px-3 align-middle">
					<span class="d-block"><%= order[4] %>&nbsp;<%= order[5] %></span>
					<small class="text-muted">
						<%= order[12] %>
					</small>
				</td>
				<td class="px-3 align-middle">
					<span class="d-block"><strong style="font-size: 2em;"><%= order[39] ? order[39] : 0 %></strong>&nbsp;/&nbsp;<%= order[32] %></span>
					<small class="text-muted">
						avail&nbsp;/&nbsp;ordered
					</small>
				</td>
				<td class="px-3 align-middle">
						<div class="input-group justify-content-end">
							<button class="btn btn-lg btn-outline-success my-auto"><i class="bi bi-gear"></i></button>
							<button class="btn btn-lg btn-success" type="submit"><i class="bi bi-check-lg mx-2"></i><span class="mx-2">Check-in</span></button>
						</div>
				</td>
			</tr>
		<% }); 
		} %> 
	</table>
</div>

